# NutriVault Docker Environment Variables
# Copy this file to .env and adjust values as needed

# Application Version (used by deployment scripts)
VERSION=latest

# Docker Registry Configuration
DOCKER_REGISTRY=nutrivault
DOCKER_REPO=erikbeauvalot-sg/nutrivault

# Build Information (automatically set by deployment scripts)
BUILD_DATE=
GIT_COMMIT=

# Ports
BACKEND_PORT=3001
FRONTEND_PORT=80

# Security
JWT_SECRET=your-super-secret-jwt-key-here
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here
JWT_ACCESS_EXPIRATION=30m
JWT_REFRESH_EXPIRATION=30d
JWT_ISSUER=nutrivault

# Security Limits
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
MAX_FILE_SIZE=10485760

# CORS
ALLOWED_ORIGINS=http://localhost

# Logging
LOG_LEVEL=info

# Email Configuration (optional)
EMAIL_HOST=
EMAIL_PORT=
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM_NAME=NutriVault

# Database
SEED_DB=false

# Deployment
ENVIRONMENT=development