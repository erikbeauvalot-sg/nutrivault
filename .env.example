# Environment Configuration for Docker Deployment

# PostgreSQL Configuration (for docker-compose.postgres.yml)
DB_NAME=nutrivault
DB_USER=nutrivault_user
DB_PASSWORD=changeme123
DB_PORT=5432

# SQLite Configuration (for docker-compose.sqlite.yml)
DB_STORAGE=/app/data/nutrivault.sqlite

# Backend Configuration
NODE_ENV=production
PORT=3001
DB_DIALECT=postgres  # or 'sqlite'

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12

# Frontend Configuration
VITE_API_URL=http://localhost:3001
