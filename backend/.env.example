# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_DIALECT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nutrivault
DB_USER=postgres
DB_PASSWORD=your_password_here

# For SQLite (development)
# DB_DIALECT=sqlite
# DB_STORAGE=./data/nutrivault.db

# JWT Configuration
# Generate secure secrets using: openssl rand -base64 32
JWT_SECRET=your-super-secret-min-32-characters-long-change-in-production
JWT_EXPIRES_IN=30m
REFRESH_TOKEN_SECRET=your-refresh-secret-min-32-characters-change-in-production
REFRESH_TOKEN_EXPIRES_IN=7d

# Bcrypt Configuration
# Recommended: 12 for production, 10 for development
BCRYPT_ROUNDS=12

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Session
SESSION_SECRET=your-session-secret-min-32-characters-change-in-production

# Email Configuration (if implemented)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-app-password

# External APIs (if needed)
# API_KEY=your-api-key-here

# Security
# Enable additional security features in production
# ENABLE_HTTPS=true
# TRUST_PROXY=true
