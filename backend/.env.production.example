# Environment Configuration for NutriVault Backend
# Copy this file to .env and update values for your environment

# Database Configuration
NODE_ENV=development
PORT=3001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-that-is-at-least-32-characters-long-for-development
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-that-is-at-least-32-characters-long-for-development
JWT_ACCESS_EXPIRATION=30m
JWT_REFRESH_EXPIRATION=30d
JWT_ISSUER=nutrivault

# Authentication Configuration
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://nutrivault.beauvalot.com,https://nutrivault.beauvalot.com,http://localhost,http://localhost:80,http://localhost:5173,http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./temp_uploads

# Logging
LOG_LEVEL=info

EMAIL_HOST=smtp.gmail.com                                                                                                                                                              
EMAIL_PORT=587                                                                                                                                                                         
EMAIL_SECURE=false                                                                                                                                                                     
EMAIL_USER=mail@example.com                                                                                                                                                       
EMAIL_PASSWORD=xxxxx                                                                                                                                                        
EMAIL_FROM_NAME=NutriVault 

