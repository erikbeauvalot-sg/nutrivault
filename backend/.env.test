# Test Environment Configuration for NutriVault Backend
NODE_ENV=test
PORT=3002

# JWT Configuration (test secrets - do not use in production)
JWT_SECRET=test-jwt-secret-key-for-automated-testing-only-32chars
REFRESH_TOKEN_SECRET=test-refresh-token-secret-for-automated-testing-only
JWT_ACCESS_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d
JWT_ISSUER=nutrivault-test

# Authentication Configuration
MAX_LOGIN_ATTEMPTS=10
LOCKOUT_DURATION_MINUTES=1

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./temp_uploads_test

# Logging (disabled for tests)
LOG_LEVEL=error

# Email (mocked in tests)
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_SECURE=false
EMAIL_USER=test@test.com
EMAIL_PASSWORD=test
EMAIL_FROM_NAME=NutriVault Test

# AI (mocked in tests)
MISTRAL_API_KEY=test-api-key
